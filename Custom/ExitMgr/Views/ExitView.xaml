                                    Binding="{Binding ItemStock}" Width="*"/>
                                <DataGridTextColumn Header="{resx:Translate Batch, Uppercase=True}"
                                    Binding="{Binding ItemBatch}" Width="*"/>
                                <DataGridTextColumn Header="{resx:Translate Expiration date, Uppercase=True}"
