        Title="AstarMgr_WS_HMI" Height="395" Width="1109"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Closing="Window_Closing" Loaded="Window_Loaded" StateChanged="Window_StateChanged"
        Icon="mSw.ico">
    <Grid>
        <TextBox x:Name="txtInfo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
